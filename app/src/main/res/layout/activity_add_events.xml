<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddEventsActivity"
    android:background="@drawable/signup_background">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:backgroundTint="#272626"
            android:layout_gravity="center"
            android:outlineProvider="paddedBounds"
            app:cardCornerRadius="@dimen/_15sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD - EVENTS"
                    android:textColor="#C3A7FE"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_25sdp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Event Name"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#555353"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Registration Link"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#555353"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Event Type"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#555353"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Brochure Link"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#555353"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inner_gradienr_edit"
                        android:hint="Start Time"
                        android:textColorHint="#555353"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_15sdp"/>

                      <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inner_gradienr_edit"
                        android:hint="End Time"
                        android:textColorHint="#555353"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_15sdp"
                          android:layout_marginStart="@dimen/_15ssp"/>

                      <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/inner_gradienr_edit"
                        android:hint="Date"
                        android:textColorHint="#555353"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_20sdp"
                          android:layout_marginStart="@dimen/_25ssp"/>


                </LinearLayout>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Venue"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#555353"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Description"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#555353"
                    android:paddingBottom="@dimen/_410sdp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/add_event_button"
                    android:text="Submit"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingHorizontal="@dimen/_50sdp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>
</LinearLayout>