<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddEventsActivity"
    android:background="@drawable/signup_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:backgroundTint="#272626"
            android:layout_gravity="center"
            android:outlineProvider="paddedBounds"
            app:cardCornerRadius="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD-CLUB MEMBERS"
                    android:textColor="#C3A7FE"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_25sdp"/>
                <TextView
                    android:id="@+id/clubName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="#C3A7FE"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="8dp">
                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="match_parent"
                        android:background="@drawable/black_stroke"
                        android:scaleType="centerCrop"
                        android:layout_height="@dimen/_200sdp"
                        android:src="@drawable/add_pic"/>

                    <ProgressBar
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:theme="@style/progressBar"
                        tools:visibility="visible" />
                </RelativeLayout>


                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Name"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>


                <Spinner
                    android:id="@+id/etBatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Batch Year"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>


                <EditText
                    android:id="@+id/etBranch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Branch"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>

                <EditText
                    android:id="@+id/etPostinClub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Post in Club"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>


                <EditText
                    android:id="@+id/etPhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Phone No."
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Email"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>

                <EditText
                    android:id="@+id/etLinkedIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="LinkedIn"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>
                <EditText
                    android:id="@+id/etGitHub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Git Hub"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>
                <EditText
                    android:id="@+id/etTwitter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Twitter"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>
                <EditText
                    android:id="@+id/etInstagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Instagram"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>
                <EditText
                    android:id="@+id/etDiscord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Discord"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>

                <EditText
                    android:id="@+id/etLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Location"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>
                <EditText
                    android:id="@+id/etPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Position"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>

                <EditText
                    android:id="@+id/etCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/inner_gradienr_edit"
                    android:hint="Company"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"/>

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/description_box"
                    android:hint="Description"
                    android:minLines="5"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"
                    android:paddingBottom="@dimen/_410sdp" />
                <EditText
                    android:id="@+id/etAchievement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/description_box"
                    android:hint="Achievement"
                    android:minLines="5"
                    android:paddingVertical="@dimen/_5sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColorHint="#7D7C7C"
                    android:paddingBottom="@dimen/_410sdp" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/add_button_events"
                    android:paddingHorizontal="@dimen/_50sdp"
                    android:text="Submit"
                    android:textColor="@color/black"
                    android:layout_marginBottom="10dp"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>